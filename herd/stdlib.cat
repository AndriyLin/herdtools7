(* Basic relation *)
let po-loc = po & loc
let rfe = rf & ext
let rfi = rf & int

(* Id relation on set *)
let toid(s) = id & (s * s)

(* Turn a fence set into a fence relation *)
let fencerel(B) = (po & (_ * B)) ;  po

(* Control+cfence *)
let ctrlcfence(CFENCE) = (ctrl & (_ * CFENCE)) ; po

